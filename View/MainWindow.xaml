<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:local="clr-namespace:View"
        
        mc:Ignorable="d"
        Title="Snooker" Height="800" Width="1000">

    <Window.Resources>
        <local:WindowSizeConverter x:Key="WindowSizeConverter"/>
    </Window.Resources>

    <Grid Background="#008800">
        <Grid.RowDefinitions>
            <RowDefinition Height="255*"/>
            <RowDefinition Height="179*"/>
        </Grid.RowDefinitions>
        <Grid.DataContext>
            <vms:MainViewModel/>
        </Grid.DataContext>




        <Canvas Grid.RowSpan="2" Width="1000" >

            <ItemsControl  ItemsSource="{Binding Balls}">
                <!-- tutaj renderujemy elipsy -->
                <ItemsControl.ItemsPanel>

                    <ItemsPanelTemplate>
                        <!-- canvas bedzie przechowywal elementy-->
                        <Canvas IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Height="{Binding Diameter}" Width="{Binding Diameter}" Stroke="BlueViolet" Fill="#aaffff"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Canvas>


        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Width="120" Text="{Binding Path=BallsAmount, Mode=TwoWay}" Margin="397,283,0,0" Grid.Row="1"/>

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="Start" Command="{Binding StartCommand}" Margin="543,271,0,0" Grid.Row="1" Height="42" Width="56">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource WindowSizeConverter}">
                    <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualWidth"/>
                    <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualHeight"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
    </Grid>


</Window>
