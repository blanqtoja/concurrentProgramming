<Page x:Class="View.Views.StartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:View.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
        Grid.Row="0"
        Text="{Binding Title}" 
        FontSize="48"  
        HorizontalAlignment="Center"
        VerticalAlignment="Center" Margin="0,50,0,0"
         />

        <!-- wiersz z licznikiem kul, przycisk start-->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,100,50,50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,0,50,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                Grid.Row="0"
                Text="{Binding CounterLabel}" 
                FontSize="18"  
                Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"
                />
                <TextBlock 
                Grid.Row="1"
                Text="{Binding BallsCounter}" 
                FontSize="18"  
                Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                />

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Button 
                    Grid.Column="0" 
                    Content="+" 
                    FontSize="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="10"
                    Margin="10"
                    Command="{Binding IncrementCommand}"

                 />

                    <Button 
                    Grid.Column="1" 
                    Content="-" 
                    FontSize="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="10"
                    Margin="10"
                    Command="{Binding DecrementCommand}"

                 />
                </Grid>
            </Grid>


            <Button 
                Grid.Column="1"
                Content="{Binding ButtonText}" 
                FontSize="18"  
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Padding="20"
                Margin="20,0,20,0"
                Command="{Binding StartCommand}"
            />

        </Grid>
    </Grid>
</Page>
